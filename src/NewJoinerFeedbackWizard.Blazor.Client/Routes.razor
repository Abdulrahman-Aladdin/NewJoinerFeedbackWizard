@using Volo.Abp.AspNetCore.Components.Web.LeptonXLiteTheme.Themes.LeptonXLite
@using Volo.Abp.AspNetCore.Components.WebAssembly.WebApp
<Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="WebAppAdditionalAssembliesHelper.GetAssemblies<NewJoinerFeedbackWizardBlazorClientModule>()">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated != true)
                {
                    <RedirectToLogin />
                }
                else
                {
                    <div class="container mt-5">
                        <div class="alert alert-danger">
                            <h4><i class="fas fa-exclamation-triangle me-2"></i>Access Denied</h4>
                            <p>You don't have permission to access this page.</p>
                            <a href="/" class="btn btn-primary">Go to Home</a>
                        </div>
                    </div>
                }
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="container mt-5">
                <div class="alert alert-warning">
                    <h4><i class="fas fa-search me-2"></i>Page Not Found</h4>
                    <p>Sorry, there's nothing at this address.</p>
                    <a href="/" class="btn btn-primary">Go to Home</a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

