@using NewJoinerFeedbackWizard.Permissions

<div class="nav-item px-3 mt-3">
    <h6 class="text-uppercase text-muted small fw-bold">
        <i class="fas fa-chart-bar me-2"></i>Surveys
    </h6>
</div>

<AuthorizeView Policy="@SurveyPermissions.Submit">
    <Authorized>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="surveys/new" Match="NavLinkMatch.All">
                <span class="d-flex align-items-center">
                    <i class="fas fa-plus-circle me-2 text-primary"></i>
                    <span>New Survey</span>
                </span>
            </NavLink>
        </li>
    </Authorized>
</AuthorizeView>

<AuthorizeView Policy="@SurveyPermissions.View">
    <Authorized>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="surveys/my-surveys" Match="NavLinkMatch.All">
                <span class="d-flex align-items-center">
                    <i class="fas fa-clipboard-list me-2 text-success"></i>
                    <span>My Surveys</span>
                </span>
            </NavLink>
        </li>
    </Authorized>
</AuthorizeView>

<AuthorizeView Policy="@SurveyPermissions.ViewAll">
    <Authorized>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="surveys/manager-dashboard" Match="NavLinkMatch.All">
                <span class="d-flex align-items-center">
                    <i class="fas fa-chart-line me-2 text-info"></i>
                    <span>Team Dashboard</span>
                </span>
            </NavLink>
        </li>
    </Authorized>
</AuthorizeView>