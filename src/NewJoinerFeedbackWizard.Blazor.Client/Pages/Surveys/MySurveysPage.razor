@page "/surveys/my-surveys"
@using NewJoinerFeedbackWizard.Dtos.Survey
@using NewJoinerFeedbackWizard.Interfaces
@using NewJoinerFeedbackWizard.Permissions
@using Volo.Abp.AspNetCore.Components.Messages
@using Microsoft.Extensions.Localization
@using NewJoinerFeedbackWizard.Localization
@inject ISurveyAppService SurveyAppService
@inject IUiMessageService MessageService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<NewJoinerFeedbackWizardResource> L
@attribute [Authorize(SurveyPermissions.View)]

@{
    var ejada_blue = "#000f7d";
    var ejada_green = "#1ee790";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-blue-50 p-4">
    <div class="container" style="max-width: 1200px;">
        <!-- Header -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <div style="width: 48px; height: 48px; background-color: @ejada_blue; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
                        <i class="fas fa-clipboard-list" style="color: white; font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h1 style="font-size: 1.875rem; font-weight: bold; color: #1e3a8a; margin: 0;">@L["MySurveys"]</h1>
                        <p style="color: @ejada_blue; margin: 0;">@L["ViewSubmittedFeedbackSurveys"]</p>
                    </div>
                </div>
                <button class="btn btn-primary" @onclick="CreateNewSurvey" style="border-radius: 0.5rem;">
                    <i class="fas fa-plus me-2"></i>@L["NewSurvey"]
                </button>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid @ejada_blue;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: @ejada_blue; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["TotalSurveys"]</p>
                                <p style="font-size: 1.5rem; font-weight: bold; color: #1e3a8a; margin: 0;">@MySurveys.Count</p>
                            </div>
                            <i class="fas fa-clipboard-check" style="font-size: 2rem; color: #93c5fd;"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #16a34a;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: #15803d; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["LatestSubmission"]</p>
                                <p style="font-size: 1rem; font-weight: bold; color: #14532d; margin: 0;">
                                    @if (MySurveys.Any())
                                    {
                                        @MySurveys.OrderByDescending(s => s.CreationTime).First().CreationTime.ToShortDateString()
                                    }
                                    else
                                    {
                                        <span>@L["N_A"]</span>
                                    }
                                </p>
                            </div>
                            <i class="fas fa-calendar-check" style="font-size: 2rem; color: #86efac;"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #9333ea;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: #7e22ce; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["AvgSatisfaction"]</p>
                                <p style="font-size: 1.5rem; font-weight: bold; color: #581c87; margin: 0;">@AvgSatisfaction%</p>
                            </div>
                            <i class="fas fa-smile" style="font-size: 2rem; color: #d8b4fe;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Surveys List -->
        @if (IsLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden"> @L["Loading"]</span>
                </div>
                <p class="mt-3 text-primary">@L["LoadingSurveys"]</p>
            </div>
        }
        else if (!MySurveys.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-clipboard-list" style="font-size: 4rem; color: #bfdbfe; margin-bottom: 1rem;"></i>
                    <h3 style="font-size: 1.25rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">@L["NoSurveysYet"]</h3>
                    <p style="color: @ejada_blue; margin-bottom: 1.5rem;">@L["NoFeedbackSubmitted"]</p>
                    <button class="btn btn-primary btn-lg" @onclick="CreateNewSurvey">
                        <i class="fas fa-plus me-2"></i>@L["CreateFirstSurvey"]
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var survey in MySurveys.OrderByDescending(s => s.CreationTime))
                {
                    <div class="col-12">
                        <div class="card border-0 shadow-sm hover-shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <h3 style="font-size: 1.25rem; font-weight: bold; color: #1e3a8a; margin: 0;">@L["SurveySubmission"]</h3>
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>@L["Submitted"]
                                            </span>
                                        </div>
                                        <div class="d-flex flex-wrap gap-3" style="font-size: 0.875rem; color: @ejada_blue;">
                                            <span><i class="fas fa-user me-1"></i> @L["Manager"] @survey.ManagerName</span>
                                            <span><i class="fas fa-user-tie me-1"></i>@L["Label:Lead"] @survey.LeadName</span>
                                            <span><i class="fas fa-calendar me-1"></i> @L["Label:Joined"] @survey.JoiningDate.ToShortDateString()</span>
                                            <span><i class="fas fa-paper-plane me-1"></i> @L["Label:Submitted"] @survey.CreationTime.ToShortDateString()</span>
                                        </div>
                                    </div>

                                    <div class="text-end">
                                        <div class="mb-2">
                                            <span style="font-size: 0.875rem; color: @ejada_blue; font-weight: 600;">@L["YourSatisfaction"]</span>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-end gap-2">
                                            <div style="width: 120px; height: 10px; background-color: #dbeafe; border-radius: 9999px; overflow: hidden;">
                                                <div style="height: 100%; background-color: @GetSatisfactionColor(survey.SatisfactionLevel); width: @(survey.SatisfactionLevel)%;"></div>
                                            </div>
                                            <span style="font-size: 1rem; font-weight: bold; color: #1e3a8a;">@survey.SatisfactionLevel%</span>
                                        </div>
                                    </div>
                                </div>

                                @if (ExpandedSurveyId == survey.Id)
                                {
                                    <div class="mt-3 pt-3" style="border-top: 1px solid #e5e7eb;">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-12">
                                                <div class="p-3" style="background-color: #dcfce7; border-radius: 0.5rem; border-left: 4px solid #16a34a;">
                                                    <h4 style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">
                                                        <i class="fas fa-award me-2"></i>@L["Strengths"]
                                                    </h4>
                                                    <p style="color: #15803d; font-size: 0.875rem; margin: 0; line-height: 1.6;">@survey.StrengthsObserved</p>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="p-3" style="background-color: #fed7aa; border-radius: 0.5rem; border-left: 4px solid #f97316;">
                                                    <h4 style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">
                                                        <i class="fas fa-exclamation-circle me-2"></i>@L["Feedback:Improvement"]
                                                    </h4>
                                                    <p style="color: #7c2d12; font-size: 0.875rem; margin: 0; line-height: 1.6;">@survey.MissingAreas</p>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="p-3" style="background-color: #dbeafe; border-radius: 0.5rem; border-left: 4px solid @ejada_blue;">
                                                    <h4 style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">
                                                        <i class="fas fa-lightbulb me-2"></i>@L["Feedback:Recommendations"]
                                                    </h4>
                                                    <p style="color: #1e3a8a; font-size: 0.875rem; margin: 0; line-height: 1.6;">@survey.Recommendations</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2">
                                            <button class="btn btn-outline-primary flex-grow-1" @onclick="() => ExpandedSurveyId = null">
                                                <i class="fas fa-chevron-up me-2"></i>@L["HideDetails"]
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteSurvey(survey.Id)">
                                                <i class="fas fa-trash me-2"></i>@L["Delete"]
                                            </button>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-primary w-100 mt-2" @onclick="() => ExpandedSurveyId = survey.Id">
                                        <i class="fas fa-eye me-2"></i>@L["ViewYourFeedback"]
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease;
    }

        .hover-shadow:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
        }
</style>

