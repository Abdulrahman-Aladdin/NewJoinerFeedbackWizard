@page "/surveys/manager-dashboard"
@using NewJoinerFeedbackWizard.Dtos.Survey
@using NewJoinerFeedbackWizard.Dtos.User
@using NewJoinerFeedbackWizard.Interfaces
@using NewJoinerFeedbackWizard.Permissions
@using Microsoft.Extensions.Localization
@using NewJoinerFeedbackWizard.Localization
@using Volo.Abp.AspNetCore.Components.Messages
@inject ISurveyAppService SurveyAppService
@inject IUserAppService UserAppService
@inject IUiMessageService MessageService
@inject IJSRuntime JS
@inject IStringLocalizer<NewJoinerFeedbackWizardResource> L
@attribute [Authorize(SurveyPermissions.ViewAll)]

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-blue-50 p-4">
    <div class="container-fluid" style="max-width: 1400px;">
        @if (IsDeleteModalVisible)
        {
            <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content border-0 shadow">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete</h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="CloseDeleteModal"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this survey for
                            <strong>@SurveyToDelete?.EmployeeName</strong>?
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                            <button class="btn btn-danger" @onclick="ConfirmDelete">
                                <span>Delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        }
        <!-- Header -->
        <div class="mb-4">
            <div class="d-flex align-items-center mb-4">
                <div style="width: 48px; height: 48px; background-color: #2563eb; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
                    <i class="fas fa-users" style="color: white; font-size: 1.5rem;"></i>
                </div>
                <div>
                    <h1 style="font-size: 1.875rem; font-weight: bold; color: #1e3a8a; margin: 0;">@L["Menu:ManagerDashboard"]</h1>
                    <p style="color: #2563eb; margin: 0;">@L["DashboardSubtitle"]</p>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #2563eb;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: #2563eb; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["TotalSurveys"]</p>
                                <p style="font-size: 1.5rem; font-weight: bold; color: #1e3a8a; margin: 0;">@TotalCount</p>
                            </div>
                            <i class="fas fa-users" style="font-size: 2rem; color: #93c5fd;"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #16a34a;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: #15803d; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["StatsThisMonth"]</p>
                                <p style="font-size: 1.5rem; font-weight: bold; color: #14532d; margin: 0;">@ThisMonthCount</p>
                            </div>
                            <i class="fas fa-calendar" style="font-size: 2rem; color: #86efac;"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #9333ea;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: #7e22ce; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["StatsAvgSatisfaction"] </p>
                                <p style="font-size: 1.5rem; font-weight: bold; color: #581c87; margin: 0;">@AvgSatisfaction%</p>
                            </div>
                            <i class="fas fa-chart-line" style="font-size: 2rem; color: #d8b4fe;"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #f97316;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p style="color: #ea580c; font-weight: 600; font-size: 0.875rem; margin-bottom: 0.25rem;">@L["StatsTeamMembers"]</p>
                                <p style="font-size: 1.5rem; font-weight: bold; color: #7c2d12; margin: 0;">@UniqueEmployees</p>
                            </div>
                            <i class="fas fa-user-friends" style="font-size: 2rem; color: #fdba74;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="input-group me-2 flex-grow-1">
                    <span class="input-group-text bg-white" style="border: 2px solid #bfdbfe; border-right: none;">
                        <i class="fas fa-search text-primary"></i>
                    </span>
                    <input type="text" class="form-control"
                           @bind="SearchTerm"
                           @bind:event="oninput"
                           @onkeyup="OnSearchChanged"
                           placeholder="@L["SearchPlaceholder"]"
                           style="border: 2px solid #bfdbfe; border-left: none;" />
                </div>

                <button class="btn btn-primary d-inline-flex align-items-center" 
                        type="button" 
                        style="white-space: nowrap; padding: 0.5rem 1rem;"
                        @onclick="ExportToExcel">
                        @if (IsDownloadInProgress)
                        {
                            <MudProgressCircular Class="me-2" Size=Size.Small Indeterminate="true" Color="Color.Inherit" />
                        <span>@L["StatusDownloading"]</span>
                        } else {
                            <i class="fas fa-file-excel me-2"></i>
                        <span>@L["ButtonExportExcel"]</span>
                        }
                </button>
            </div>
        </div>

        <!-- Surveys List -->
        @if (IsLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">@L["StatusLoading"]</span>
                </div>
                <p class="mt-3 text-primary">@L["StatusLoadingSurveys"]</p>
            </div>
        }
        else if (FilteredSurveys == null || !FilteredSurveys.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-users" style="font-size: 4rem; color: #bfdbfe; margin-bottom: 1rem;"></i>
                    <h3 style="font-size: 1.25rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">@L["NoSurveysTitle"]</h3>
                    <p style="color: #2563eb;">@L["NoSurveysDescription"]</p>
                </div>
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var survey in FilteredSurveys)
                {
                    <div class="col-12">
                        <div class="card border-0 shadow-sm hover-shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <h3 style="font-size: 1.25rem; font-weight: bold; color: #1e3a8a; margin: 0;">@survey.EmployeeName</h3>
                                            <span class="badge bg-primary">@L["Badge:NewJoiner"]</span>
                                        </div>
                                        <div class="d-flex flex-wrap gap-3" style="font-size: 0.875rem; color: #2563eb;">
                                            <span><i class="fas fa-user me-1"></i>@L["Label:Lead"] @survey.LeadName</span>
                                            <span><i class="fas fa-calendar me-1"></i>@L["Label:Joined"] @survey.JoiningDate.ToShortDateString()</span>
                                            <span><i class="fas fa-paper-plane me-1"></i>@L["Label:Submitted"] @survey.CreationTime.ToShortDateString()</span>
                                        </div>
                                    </div>

                                    <div class="text-end">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <span style="font-size: 0.875rem; color: #2563eb; font-weight: 600;">@L["Label:Satisfaction"]</span>
                                            <div class="d-flex align-items-center gap-1">
                                                <div style="width: 96px; height: 8px; background-color: #dbeafe; border-radius: 9999px; overflow: hidden;">
                                                    <div style="height: 100%; background-color: @GetSatisfactionColor(survey.SatisfactionLevel); width: @(survey.SatisfactionLevel)%;"></div>
                                                </div>
                                                <span style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a;">@survey.SatisfactionLevel%</span>
                                            </div>
                                        </div>
                                        @if (HasDeletePermission)
                                        {
                                            <button class="btn btn-outline-danger btn-sm mt-2"
                                                @onclick="() => ShowDeleteConfirmation(survey.Id)">
                                                <i class="fas fa-trash-alt me-1"></i>Delete
                                            </button>
                                        }
                                    </div>
                                </div>

                               
                                @if (ExpandedSurveyId == survey.Id)
                                {
                                    <div class="mt-3 pt-3" style="border-top: 1px solid #e5e7eb;">
                                        <div class="row g-3">
                                            <div class="col-md-4">
                                                <div class="p-3" style="background-color: #dcfce7; border-radius: 0.5rem;">
                                                    <h4 style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">
                                                        <i class="fas fa-award me-2"></i>@L["Feedback:Strengths"]
                                                    </h4>
                                                    <p style="color: #15803d; font-size: 0.875rem; margin: 0;">@survey.StrengthsObserved</p>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="p-3" style="background-color: #fed7aa; border-radius: 0.5rem;">
                                                    <h4 style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">
                                                        <i class="fas fa-exclamation-circle me-2"></i>@L["Feedback:Improvement"]
                                                    </h4>
                                                    <p style="color: #7c2d12; font-size: 0.875rem; margin: 0;">@survey.MissingAreas</p>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="p-3" style="background-color: #dbeafe; border-radius: 0.5rem;">
                                                    <h4 style="font-size: 0.875rem; font-weight: bold; color: #1e3a8a; margin-bottom: 0.5rem;">
                                                        <i class="fas fa-lightbulb me-2"></i>@L["Feedback:Recommendations"]
                                                    </h4>
                                                    <p style="color: #1e3a8a; font-size: 0.875rem; margin: 0;">@survey.Recommendations</p>
                                                </div>
                                            </div>
                                        </div>

                                        <button class="btn btn-outline-primary w-100 mt-3" @onclick="() => ExpandedSurveyId = null">
                                            <i class="fas fa-chevron-up me-2"></i>@L["HideDetails"]
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-primary w-100 mt-2" @onclick="() => ExpandedSurveyId = survey.Id">
                                        <i class="fas fa-eye me-2"></i>@L["ViewFullFeedback"]
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease;
    }

    .hover-shadow:hover {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
    }

    /* Prevent body scroll when modal is open */
    body.modal-open {
        overflow: hidden !important;
    }

    /* Ensure modal covers entire viewport */
    .modal.show.d-block {
        position: fixed !important;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        overflow-x: hidden;
        overflow-y: auto;
        z-index: 1050;
    }
</style>
